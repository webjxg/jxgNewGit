<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta http-equiv="Cache-Control" content="no-store"/>
    <meta http-equiv="Pragma" content="no-cache"/>
    <title>选择用户</title>
    <style>
        .ztree {height:380px;}
        #assignRole{height:100%;overflow: hidden; padding:10px 0;}
        #assignRole>.col-sm-4{height:100%;overflow: auto;}
        .col-sm-4>div{line-height: 26px;}
        .searchGroup {right:10px; position: absolute; line-height: 24px;}
        .btn-search-input {margin-left:-4px; height:26px; padding: 0 5px; border: 1px solid #ddd; background:#fff;}
        .searchText{
            width:80px; line-height:24px; padding:2px 4px; font-size:12px; vertical-align:top;
            border:1px solid #ddd; border-radius: 5px; padding: 0 6px; outline: none;
            border-right: none; border-top-right-radius: 0; border-bottom-right-radius: 0;
        }
    </style>
    <script type="text/javascript">
        var userSelect3=false;
        var orgOptions, waitUserOptions, hasUserOptions;
        window.setConfig=function(orgOptions_, waitUserOptions_, hasUserOptions_){
            orgOptions=orgOptions_||{};
            waitUserOptions=waitUserOptions_||{};
            hasUserOptions=hasUserOptions_||{};
            userSelect3 = true;
        }
    </script>
</head>
<body id="orgAssignUsers">
<div id="assignRole" >
    <div class="col-sm-4" style="border-right: 1px solid #A8A8A8;">
        <div>所在部门：
            <span class="searchGroup">
                <input type="text" id="org_searchText" class="searchText" placeholder="关键字筛选">
                <button type="button" class="btn-search-input searchAll">
                    <i class="fa fa-search"></i>
                 </button>
            </span>
        </div>
        <ul id="officeTree" class="ztree"></ul>
    </div>
    <div class="col-sm-4">
        <div>待选人员：
            <span class="searchGroup">
                <input type="text" id="wait_searchText" class="searchText" placeholder="关键字筛选">
                <button type="button" class="btn-search-input searchAll">
                    <i class="fa fa-search"></i>
                 </button>
            </span>
        </div>
        <ul id="userTree" class="ztree"></ul>
    </div>
    <div class="col-sm-4" style="border-left: 1px solid #A8A8A8;">
        <div>已选人员：
            <span class="searchGroup">
                <input type="text" id="has_searchText" class="searchText" placeholder="关键字筛选">
                <button type="button" class="btn-search-input searchAll" title="查询">
                    <i class="fa fa-search"></i>
                 </button>
                <button type="button" class="btn-search-input hasRevertBtn" title="还原">
                    <i class="fa fa-reply"></i>
                 </button>
            </span>
        </div>
        <ul id="selectedTree" class="ztree"></ul>
    </div>
</div>
<script data-main="/js/module/common/userSelect3" src="/js/zlib/require.js"></script>
</body>
</html>