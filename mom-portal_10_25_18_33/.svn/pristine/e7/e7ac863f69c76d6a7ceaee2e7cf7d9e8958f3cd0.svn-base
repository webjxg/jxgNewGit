@charset "utf-8";
//可重复利用

$h100: 100%;
body{
  font-family: "open sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-size: 13px;
  color: #676a6c;
  overflow-x: hidden;
  background-color: #f3f3f4;
}
.wrapper{
  height:$h100;
}
.wrapper-content {
  padding: 20px;
}

.ibox{
  @extend .wrapper;
  clear: both;
  margin-bottom: 25px;
  margin-top: 0;
  padding: 0;
}
.ibox-content {
  @extend .wrapper;
  clear: both;
  background-color: #fff;
  color: inherit;
  padding: 15px 20px 20px 20px;
  border-color: #e7eaec;
  border-image: none;
  border-style: solid solid none;
  border-width: 1px 0;
}
.content{
  @extend .wrapper;
}

#content{
  background-color: #fff;
}

.row{
  margin: -20px;
}

#left{
  min-height: 400px;
  margin: 15px 0 0 15px;
  padding-left: 0;
  box-sizing: border-box;
  >a{
    cursor: pointer;
  }
}
.ztree{
  overflow: auto;
  margin: 0;
  margin-top: 10px;
  margin-bottom: 10px;
  padding: 10px 0 10px 10px;
}

#right{
  padding: 0;
  min-height: 650px;
  float: right;

}
.col-sm-11 {
  width: 82%;
}